[server]
skip_name_resolve               = 1
innodb_buffer_pool_size         = {{ mariadb_config_innodb_buffer_pool_size }}
innodb_buffer_pool_instances    = 1
innodb_flush_log_at_trx_commit  = 2
innodb_log_buffer_size          = 32M
innodb_max_dirty_pages_pct      = 90
query_cache_type                = 1
query_cache_limit               = 2M
query_cache_min_res_unit        = 2k
query_cache_size                = 64M
tmp_table_size                  = 64M
max_heap_table_size             = 64M
slow_query_log                  = 1
slow_query_log_file             = /var/log/mysql/slow.log
long_query_time                 = 1

[client]
default-character-set           = utf8mb4
socket                          = /var/run/mysqld/mysqld.sock

[mysql]
default-character-set           = utf8mb4

[mysqld_safe]
socket                          = /var/run/mysqld/mysqld.sock
nice                            = 0

[mysqld]
user                            = mysql
bind-address                    = {{ mariadb_config_bind }}
pid-file                        = /run/mysqld/mysqld.pid
socket                          = /run/mysqld/mysqld.sock
port                            = 3306
basedir                         = /usr
datadir                         = /var/lib/mysql
tmpdir                          = /tmp
lc-messages-dir                 = /usr/share/mysql
query_cache_size                = 16M
log_error                       = /var/log/mysql/error.log
expire_logs_days                = 10
character-set-server            = {{ mariadb_config_character }}
collation-server                = {{ mariadb_config_collation }}
transaction_isolation           = {{ mariadb_config_transaction_isolation }}
binlog_format                   = {{ mariadb_config_binlog_format }}
