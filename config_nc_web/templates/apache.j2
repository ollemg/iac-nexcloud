# ANSIBLE CONF
<VirtualHost *:80>
  ServerName  {{ domain }}
  Redirect / https://{{ domain }}/

</VirtualHost>
<VirtualHost *:443>

  ServerName{{ domain }}
  DocumentRoot {{ work_dir }}

  <Directory {{ work_dir }}>
    Require all granted
    AllowOverride All
    Options FollowSymLinks MultiViews

    <IfModule mod_dav.c>
      Dav off
    </IfModule>

  </Directory>

   SSLEngine on
   SSLCertificateFile {{ ssl_dir }}{{ ssl_crt }}
   SSLCertificateKeyFile {{ ssl_dir }}{{ ssl_dir }}
</VirtualHost>
